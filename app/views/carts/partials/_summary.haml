.row.res-mr-200.text-center.general-text-right
  %p.in-gold-500.font-18.cart-summary
    = t('cart.summary')
  %table.general-summary-table.general-summary-table-right.general-text-right
    %tr
      %td
        %p.font-16.cart-subtotal
          = t('cart.subtotal')
      %td
        %p.font-16.book-price
          = t('book.price', price: order_summary[:subtotal])
    %tr
      %td
        %p.font-16.cart-coupon
          =t('cart.coupon')
      %td
        %p.font-16.book-price
          = t('book.price', price: order_summary[:coupon])
    %tr
      %td
        %strong.font-18.cart-order-total
          = t('cart.order_total')
      %td
        %strong.font-18.book-price
          = t('book.price', price: order_summary[:total])
